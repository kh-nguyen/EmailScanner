<!DOCTYPE html>
<html ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Email Scanner</title>
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/bundles/font-awesome")
    @Styles.Render("~/Content/themes/cupertino/css")
    @Styles.Render("~/bundles/bootstrap/css")
    @RenderSection("styles", required: false)
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="container body-content">
        <div class="text-center">
            <a href="http://bitcoin.org" target="_blank">BitCoin</a>
            <b><a title="Please donate to support me" href="bitcoin:1PMXuwXE3iQ2DZiwgKF48EqkpiEaWdMCWU">1PMXuwXE3iQ2DZiwgKF48EqkpiEaWdMCWU</a></b>
        </div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Email Scanner</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/bootstrap/js")
    @Scripts.Render("~/bundles/jqueryui")
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/df-number-format/2.1.6/jquery.number.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/autosize.js/3.0.20/autosize.min.js"></script>
    @RenderSection("externalScripts", required: false)
    @RenderSection("scripts", required: false)
</body>
</html>
